<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
    <% if (user) { %>
        <h2>Add Lead</h2>
     <form class="card text-white bg-success mb-3" style="max-width: 35rem;" action="/leads" method="POST">
         <label class="card-header">
             Name: 
             <input type="text" name="name" autocomplete="off">
            </label>
         <label class="card-header">
             Email: 
             <input type="email" name="email">
            </label>
         <label class="card-header">
             Lead Status: 
             <input type="checkbox" name="lead">
            </label>
            <label class="card-header">  
             Linkedin:
             <input type="text" name="linkedin">
            </label>
            <label class="card-header">
                Last Touch: 
                <input type="date" name="date">
            </label>
            <label class="card-header">
                Notes: 
                <textarea class="card-body" name="notes" cols="30" rows="10"></textarea>
            </label>
            <button class="btn btn-danger">Add Lead </button>
        </form>
    <% } %>
    <h1>Leads! üó£Ô∏è</h1>
    <% leads.forEach(lead => { %>
     <li><%= lead.name %> is <%= lead.lead ? "is a lead" : "is not a lead" %></li>
    <% }) %>
</section>



