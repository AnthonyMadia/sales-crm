<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>



<section>
    <div class="card text-white bg-primary mb-3" style="max-width: 35rem;">
      <div class="card-header" id="card-lead"><%= lead.name %></div>
      <div class="card-body">
        <h5 class="card-title">Lead created by <%= lead.owner.name %></h5>
        <p class="card-text">📧 eMail: <%= lead.email %></p>
        <p class="card-text">LinkedIn: <a href="https://www.linkedin.com/in/<%= lead.linkedin %> "><%= lead.linkedin %></a></p>
        <p class="card-text">🚦 Lead Status: <%= lead.lead ? "is a lead 👍" : "is not a lead 👎" %></p>
        <p class="card-text">Last Touch: <%= lead.lastTouch %></p>
        <p class="card-text">✍️ Notes: <%= lead.notes %></p>
      </div>
    </div>
    <% if (user) { %>
      <form 
        action="/leads/<%= lead._id %>/flipstatus?_method=PATCH" 
        method="POST"
      >
        <button class="btn btn-warning" type="submit">
          Change Lead Status
        </button>
      </form>
    <% } %>
</section>



<%- include('../partials/footer') %>